// Example Stylus file
//
// Stylus docs:  http://learnboost.github.com/stylus/docs/js.html
// Nib docs:     http://visionmedia.github.com/nib

@import 'nib'
@import './mixins.styl'

.clearfix
  clearfix()

// Main

body, html
  height 100%
html
  border 1em solid purple_dark
  box-sizing border-box
body
  font normal 1em sans-serif
  background linear-gradient(top, #000, #333)
  text-align center
  color #fff
p
  margin-bottom 1em
a
  color #ccc
h1
  cursor pointer
  font-size 3.5em
  font-weight normal
  margin 1.5em
  color #fff
  text-shadow 1px 1px 2px #777
  text-transform uppercase
  span:nth-child(4)
    display none
  img
    vertical-align middle
    height: 112px
    width: @height

#content
  padding 50px 0


#countdown
  clear:both
  margin 0 auto
  background linear-gradient(top, #000, #111)
  border-top 2px solid #333366
  border-bottom 2px solid #333366
  overflow hidden
  box-shadow 0 0 30px rgba(#333366, 0.5)
  ul
    @extend .clearfix
    clear both
    display block
    max-width 600px
    min-width 300px
    margin 0 auto
  li
    font-size 1.8em
    display block
    float left
    width 23%
    margin 0
    padding 1%
    text-align center
  .label
    li
      text-transform uppercase
      font-size: 1.4em
  .val
    li
      color red_blood
      font-family fontfam2
      font-weight 100
      font-size 4em
      line-height 1em
      padding-top 0.25em
      text-shadow 0 0 .25em rgba(red_glow, .5)
      text-indent -0.35em

#killkillkill
  transition: all 1s
  position absolute
  bottom 0
  left 0
  right 0
  p
    white-space: nowrap
    text-align center
    text-transform: uppercase
    font-size: 2em
    line-height: 0em;
    color: rgba(#fff, .3)
    

#schedule
  clear both
  display none
  background-color #fff
  color #333
  position fixed
  width 400px
  height 400px
  left 50%
  top 50%
  margin-left -(@width/2)px
  margin-top -(@height/2)px
  li
    cursor pointer
    border-bottom 1px solid #000
    padding .45em 0
    &:hover
      background linear-gradient(top, #000, #111)
      color #ccccff


// Media Queries
@media (max-width: 800px)
  h1
    margin: 0 6% 1em
@media (max-width: 767px)
  html
    min-width 300px
  h1
    text-align left
    min-width 400px
    text-shadow: 0 0 0 transparent
    span
      display none
      &:nth-child(4)
        display inline
        font-size 2em
        line-height 1em
    img
      height 2em
      width 2em
      float left
      margin-right: .2em
  #countdown
    ul
      width: 100%
    li
      width: 30%
      &:nth-child(4)
      &:nth-child(8)
        display: none
    